CREATE TABLE Autor (
    autor_id BIGINT PRIMARY KEY AUTO_INCREMENT,
    nombre VARCHAR(100) NOT NULL,
    nacionalidad VARCHAR(100),
    fechaNacimiento DATE
);

CREATE TABLE Libro (
    libro_id BIGINT PRIMARY KEY AUTO_INCREMENT,
    autor_id BIGINT,
    titulo VARCHAR(255) NOT NULL,
    a√±oPublicacion INT,
    cantidadDisponible INT,
    FOREIGN KEY (autor_id) REFERENCES Autor(autor_id)
);

CREATE TABLE Usuario (
    usuario_id BIGINT PRIMARY KEY AUTO_INCREMENT,
    nombre VARCHAR(100) NOT NULL,
    email VARCHAR(100) UNIQUE NOT NULL,
    telefono VARCHAR(20),
    direccion VARCHAR(200)
);

CREATE TABLE Prestamo (
    prestamo_id BIGINT PRIMARY KEY AUTO_INCREMENT,
    usuario_id BIGINT NOT NULL,
    libro_id BIGINT NOT NULL,
    fechaPrestamo DATE NOT NULL,
    fechaDevolucion DATE,
    estado VARCHAR(50),
    FOREIGN KEY (usuario_id) REFERENCES Usuario(usuario_id),
    FOREIGN KEY (libro_id) REFERENCES Libro(libro_id)
);
