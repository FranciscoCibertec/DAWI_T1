CREATE TABLE EMPLEADO (
    empleado_id BIGINT PRIMARY KEY AUTO_INCREMENT,
    nombre VARCHAR(100) NOT NULL,
    email VARCHAR(100) UNIQUE NOT NULL,
    fecha_ingreso DATE NOT NULL
);

CREATE TABLE EMPLEADO_FIJO (
    empleado_id BIGINT PRIMARY KEY,
    salario_base DECIMAL(10, 2) NOT NULL,
    dias_vacaciones INT NOT NULL,
    FOREIGN KEY (empleado_id) REFERENCES EMPLEADO(empleado_id)
);

CREATE TABLE EMPLEADO_FREELANCE (
    empleado_id BIGINT PRIMARY KEY,
    tarifa_hora DECIMAL(10, 2) NOT NULL,
    horas_semanales INT NOT NULL,
    FOREIGN KEY (empleado_id) REFERENCES EMPLEADO(empleado_id)
);

CREATE TABLE EMPLEADO_PAGOS (
    empleado_pago_id BIGINT PRIMARY KEY AUTO_INCREMENT,
    empleado_id BIGINT NOT NULL,
    importe DECIMAL(10, 2) NOT NULL,
    fecha_pago DATE NOT NULL,
    FOREIGN KEY (empleado_id) REFERENCES EMPLEADO(empleado_id)
);
